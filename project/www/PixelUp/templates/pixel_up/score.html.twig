{% extends 'base.html.twig' %}

{% block title %}Score index{% endblock %}

{% block body %}


<section id="classement">

    <h1>Classement</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Classement</th>
                <th>Score</th>
                <th>Date</th>
                <th>Joueur</th>
            </tr>
        </thead>
        <tbody id="tbodyscore">
        {% for score in scores %}
            <tr>
                <td>{{ score.score }}</td>
                <td>{{ score.date ? score.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ score.username }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun score</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}
