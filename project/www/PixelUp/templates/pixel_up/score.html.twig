{% extends 'base.html.twig' %}

{% block title %}Score index{% endblock %}

{% block body %}

<div class="flex">
    <button onclick="showBestScore()">Meilleur score</button>
    <button onclick="showRanked()">Classement</button>
</div>

<section id="bestScore">

    <h1>Meilleur score</h1>
    {% if app.user %}
        <figure>
            <iconify-icon icon="emojione-v1:trophy" style="color: #ff8400; width="200" height="200""></iconify-icon>
            <figcaption>



                {{ personnalScores[0].score }}

            

            </figcaption>
        </figure>
    {% else %}
    <p> Connectez vous pour acceder Ã  ces informations. </p>
    {% endif %}
</section>

<section id="ranked">

    <h1>Classement</h1>

    {{ form_start(form) }}
    {{ form_end(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Classement</th>
                <th>Score</th>
                <th>Date</th>
                <th>Joueur</th>
            </tr>
        </thead>
        <tbody id="tbodyscore">
        {% for score in scores %}
            <tr>
                <td>{{ score.max_score }}</td>
                <td>{{ score.date ? score.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ score.username }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun score</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <div class="container">
        <div class="row">
            <div class="d-flex align-items-center justify-content-center">
                {{ knp_pagination_render(scores) }}
            </div>
        </div>
    </div>

</section>


{% endblock %}
