{% extends 'base.html.twig' %}

{% block title %}Profil !{% endblock %}

{% block body %}

    

    <form action="/modifProfil" method="post" id="profilForm">
        <label for="pseudo">&nbsp;:</label>
        <div class="flexForm">
            <span class="iconify" data-icon="icon-park-twotone:game" style="color: white; font-size: 70px;"></span>
            <input type="text" id="pseudo" name="pseudo" autocomplete="off" />
        </div>
        
        <label for="password">Nouveau mot de passe&nbsp;:</label>
        <div class="flexForm">
            <span class="iconify" data-icon="icon-park-twotone:game" style="color: white; font-size: 70px;"></span>
            <input type="password" id="password" name="password" autocomplete="new-password" />
        </div>

        <label for="confirmPassword">Confirmer mot de passe :</label>
        <div class="flexForm">
            <span class="iconify" data-icon="icon-park-twotone:game" style="color: white; font-size: 70px;"></span>
            <input type="password" id="confirmPassword" name="confirmPassword" autocomplete="off" />
        </div>

        <label for="email">Adresse mail :</label>
        <div class="flexForm">
            <span class="iconify" data-icon="icon-park-twotone:game" style="color: white; font-size: 70px;"></span>
            <input type="email" id="email" name="email" autocomplete="off" />
        </div>
        <input type="submit" value="Valider">

        <label for="delete">Supprimer le profil :</label>
        <div class="flexForm">
            <span class="iconify" data-icon="icon-park-twotone:game" style="color: white; font-size: 70px;"></span>
            <input type="text" id="delete" name="delete" autocomplete="off" />
        </div>
        <input type="submit" value="Valider">
    </form>

{% endblock %}
