{% extends 'base.html.twig' %}

{% block title %}Hello PixelUpController!{% endblock %}

{% block body %}

<div class="scoreMenu">
    <a href="">Score personnel</a>
    <a href="">Classement</a>
</div>

<section id="score">
    <figure>
        <img src="" alt="Une coupe de champion"/>
        <figcaption>
            
        </figcaption>
    </figure>
    
</section>

<section id="classement">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ score.id }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ score.score }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ score.date ? score.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
</section>

{% endblock %}